<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:foreground="@mipmap/jar"
             android:foregroundGravity="right|bottom"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <TextView android:layout_width="280dp" android:layout_height="280dp"
              android:layout_gravity="center"
              android:background="#FF0000FF"
              android:text="蓝色背景"
              android:textColor="#FFFFFF"/>
    <TextView android:layout_width="230dp" android:layout_height="230dp"
              android:layout_gravity="center"
              android:background="#FF0077FF"
              android:text="天蓝色背景"
              android:textColor="#FFFFFF"/>
    <TextView android:layout_width="180dp" android:layout_height="180dp"
              android:layout_gravity="center"
              android:background="#FF00B4FF"
              android:text="水蓝色背景"
              android:textColor="#FFFFFF"/>
</FrameLayout>
